{
  "name": "multitest",
  "version": "0.2.0",
  "description": "Run \"npm test\" using multiple node versions",
  "main": "multitest.js",
  "bin": {
    "multitest": "./multitest.js"
  },
  "scripts": {
    "cover": "istanbul cover _mocha -- --recursive ./test",
    "coveralls": "istanbul cover --report lcovonly _mocha -- --recursive ./test && cat ./coverage/lcov.info | coveralls && rm -rf ./coverage",
    "lint": "standard",
    "postversion": "git push && git push --tags && pr-tagger",
    "pretest": "npm run lint",
    "test": "mocha --recursive ./test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jcollado/multitest.git"
  },
  "keywords": [
    "test",
    "nvm",
    "npm",
    "node",
    "io.js"
  ],
  "author": "Javier Collado <javier.collado@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jcollado/multitest/issues"
  },
  "homepage": "https://github.com/jcollado/multitest#readme",
  "devDependencies": {
    "chai": "3.4.1",
    "chai-as-promised": "5.2.0",
    "coveralls": "2.11.6",
    "ghooks": "1.0.3",
    "istanbul": "0.4.2",
    "mocha": "2.3.4",
    "pr-tagger": "0.4.1",
    "require-inject": "1.3.0",
    "sinon": "1.17.2",
    "sinon-as-promised": "4.0.0",
    "sinon-chai": "2.8.0",
    "standard": "5.4.1"
  },
  "dependencies": {
    "commander": "2.9.0",
    "js-yaml": "3.5.2",
    "promisify-function": "1.1.0",
    "winston": "2.1.1"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm test"
    }
  }
}
