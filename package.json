{
  "name": "multitest",
  "version": "0.4.1",
  "description": "Run \"npm test\" using multiple node versions",
  "main": "./lib/main",
  "bin": {
    "multitest": "./multitest.js"
  },
  "scripts": {
    "build": "babel -d lib src",
    "cover": "nyc npm test",
    "coveralls": "npm run cover && npm run report:text | coveralls",
    "lint": "standard",
    "postversion": "git push --follow-tags",
    "prepublish": "npm run build",
    "pretest": "npm run lint",
    "report:html": "nyc report --reporter html",
    "report:text": "nyc report --reporter text-lcov",
    "test": "ava"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jcollado/multitest.git"
  },
  "keywords": [
    "test",
    "nvm",
    "npm",
    "node",
    "io.js"
  ],
  "author": "Javier Collado <javier.collado@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jcollado/multitest/issues"
  },
  "homepage": "https://github.com/jcollado/multitest#readme",
  "devDependencies": {
    "ava": "0.15.1",
    "babel-cli": "6.9.0",
    "babel-eslint": "6.0.4",
    "babel-preset-es2015-node4": "2.1.0",
    "babel-register": "6.9.0",
    "coveralls": "2.11.9",
    "ghooks": "1.2.1",
    "nyc": "6.4.4",
    "pr-tagger": "0.7.1",
    "require-inject": "1.3.1",
    "sinon": "1.17.4",
    "sinon-as-promised": "4.0.0",
    "standard": "7.1.2"
  },
  "dependencies": {
    "commander": "2.9.0",
    "js-yaml": "3.6.1",
    "promisify-function": "1.3.2",
    "winston": "2.2.0"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm test",
      "pre-push": "multitest"
    }
  },
  "ava": {
    "require": [
      "babel-register"
    ]
  },
  "babel": {
    "presets": [
      "es2015-node4"
    ]
  },
  "standard": {
    "parser": "babel-eslint"
  }
}
